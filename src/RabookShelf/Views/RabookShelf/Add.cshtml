@model RabookShelf.Models.Book
@using RabookShelf.Models
@{
    ViewBag.Title = "Add Book";

}


<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())

{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()

    <div class="form-horizontal">      
        <div class="col-md-6"> 
            <div class="form-group">
                @Html.LabelFor(b => b.Title, new { @class = "control-label" })
                @Html.TextBoxFor(b => b.Title, new { @class = "form-control" })
                   
            </div>
            <div class="form-group">
                @Html.LabelFor(b => b.Author.FirstName, new { @class = "control-label" })
                @Html.TextBoxFor(b => b.Author.FirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Author.LastName, new { @class = "control-label" })
                @Html.TextBoxFor(b => b.Author.LastName, new { @class = "form-control" })
            </div>
                
            <div class="form-group">
                @Html.LabelFor(b => b.Genre, new { @class = "control-label" })
                <div>
                    <label class="checkbox-inline">
                        @Html.RadioButtonFor(b => b.Genre, Book.GenreName.Fiction) @Book.GenreName.Fiction
                    </label>
                    <label class="checkbox-inline">
                        @Html.RadioButtonFor(b => b.Genre, Book.GenreName.NonFiction) @Book.GenreName.NonFiction
                    </label>
                    <label class="checkbox-inline">
                        @Html.RadioButtonFor(b => b.Genre, Book.GenreName.Fantasy) @Book.GenreName.Fantasy
                    </label>
                </div>
            </div>         
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(b => b.Description, new { @class = "control-label" })
                @Html.TextAreaFor(b => b.Description, new { @class = "form-control" })            
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-pull-6">
                <input type="submit" value="Create" class="btn btn-default btn-success">
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
